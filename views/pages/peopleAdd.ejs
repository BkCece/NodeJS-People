<!DOCTYPE html>
<html>

<head>
    <% include ../partials/peopleHeader.ejs %>
        <title>Add New Person</title>
</head>

<body>
    <nav>
        <div>
            <ul>
                <li>
                    <a href="database"><span></span>Home</a>
                </li>
                <li>
                    <ul>
                        <li><a href="add" class="active">Add New People</a></li>
                        <li><a href="edit">Edit People</a></li>
                        <li><a href="delete">Delete People</a></li>
                        <li><a href="view">View a Person</a></li>
                        <li><a href="display">Display People</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container">
        <h2>Database Results</h2>

        <table>
            <!--rows from index.js /database definition-->
            <tr>
                <th>Person Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Size</th>
                <th>Height</th>
                <th>Type</th>
                <th>Age</th>
            </tr>
            <% results.forEach(function(r) { %>
                <tr>
                    <td>
                        <%= r.pid %>
                    </td>
                    <td>
                        <%= r.fname %>
                    </td>
                    <td>
                        <%= r.lname %>
                    </td>
                    <td>
                        <%= r.size %>
                    </td>
                    <td>
                        <%= r.height %>
                    </td>
                    <td>
                        <%= r.type %>
                    </td>
                    <td>
                        <%= r.age %>
                    </td>
                </tr>
                <% }); %>
        </table>

        <form method="POST" action="/add">
            <p>
                <h2>Person ID</h2>
                <input type="number" name="pid" value="" placeholder="Person ID">
                <br>

                <h2>Name</h2>
                <input type="text" name="fname" value="" placeholder="First Name"> &nbsp;
                <input type="text" name="lname" value="" placeholder="Last Name">
                <br>

                <h2>Size (Weight)</h2>
                <input type="number" name="size" value="" placeholder="Size (Weight)">
                <br>

                <h2>Height</h2>
                <input type="number" name="height" value="" placeholder="Height">
                <br>

                <h2>Blood Type</h2>
                <input type="text" name="type" value="" placeholder="Blood Type">
                <br>

                <h2>Age</h2>
                <input type="number" name="age" value="" placeholder="Age">
                <br>

            </p>
            <p>
                <input type="submit" name="btnAdd" class="button" value="Add New Person">
            </p>
        </form>

    </div>
    <script type=" text/javascript " src="/public/js/peopleScript.js "></script>
</body>

</html>