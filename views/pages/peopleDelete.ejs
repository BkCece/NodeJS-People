<!DOCTYPE html>
<html>

<head>
    <% include ../partials/peopleHeader.ejs %>
        <title>Delete Person</title>
</head>

<body>
    <nav>
        <div>
            <ul>
                <li>
                    <a href="home"><span></span>Home</a>
                </li>
                <li>
                    <ul>
                        <li><a href="add">Add New Person</a></li>
                        <li><a href="delete" class="active">Delete a Person</a></li>
                        <li><a href="display">Display People</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>

    <table class="homeTBL">
        <tr class="homeTBL">
            <td class="homeTBL">
                <div class="container">
                    <h2>Current People Database</h2>

                    <table>
                        <!--rows from index.js /database definition-->
                        <tr>
                            <th>Person ID</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                        </tr>
                        <% results.forEach(function(r) { %>
                            <tr>
                                <td>
                                    <%= r.pid %>
                                </td>
                                <td>
                                    <%= r.fname %>
                                </td>
                                <td>
                                    <%= r.lname %>
                                </td>
                            </tr>
                            <% }); %>
                    </table>

                </div>
            </td>
            <td class="homeTBL">
                <h2>Enter Person to remove, by their ID</h2>
                <form method="POST" action="/delete">
                    <p>
                        <input type="number" name="pid" value="" placeholder="Person ID">
                        <br>
                    </p>

                    <p>
                        <input type="submit" name="btnDelete" class="button" value="Delete a Person">
                    </p>
                </form>
                <br>
            </td>

        </tr>
    </table>

</body>

</html>